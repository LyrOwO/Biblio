{% extends 'base.html.twig' %}

{% block title %}Mes Livres{% endblock %}

{% block body %}
<h1>Liste de mes livres</h1>
<div class="books-container">
    {% for book in books %}
        <div class="book-item">
            <h3>{{ book.title }}</h3>
            <p>Auteur: {{ book.author.name | default('Inconnu') }}</p>
        </div>
    {% else %}
        <p>Vous n'avez ajout√© aucun livre.</p>
    {% endfor %}
</div>
{% endblock %}
